<?xml-stylesheet type="text/xsl" href="../../xslt/element.xslt"?>
<element number="eInjury.03" minOccurs="1" maxOccurs="M" isNillable="Yes">
<name>Trauma Center Criteria</name>
<national>Yes</national>
<state>Yes</state>
<definition>Field Triage Criteria for transport to a trauma center as defined by the Centers for Disease Control and Prevention and the American College of Surgeons-Committee on Trauma.</definition>
<v2Number></v2Number>
<usage>Required</usage>
<notValue>Yes</notValue>
<pertinentNegative>No</pertinentNegative>
<v3Comment>CDC Field Triage Decision Scheme - value choices for Steps 1 and 2. For falls, one story is equal to 10 feet.</v3Comment>
<v3Changes>Added to better evaluate the CDC-ACS 2006 Field Triage Decision Scheme. <br/>Website: <a href="www.cdc.gov/FieldTriage">http://www.cdc.gov/FieldTriage/</a></v3Changes>
<performanceMeasuresGroup>
<performanceMeasure>Trauma</performanceMeasure>
</performanceMeasuresGroup>
<restrictions>
  <enumerations>
    <choice>
      <code>2903001</code>
      <description>Amputation Proximal to Wrist and Ankle</description>
    </choice>
    <choice>
      <code>2903003</code>
      <description>Crushed, Degloved, or Mangled Extremity</description>
    </choice>
    <choice>
      <code>2903005</code>
      <description>Flail Chest</description>
    </choice>
    <choice>
      <code>2903007</code>
      <description>Glasgow Coma Score less than 14</description>
    </choice>
    <choice>
      <code>2903009</code>
      <description>Open or Depressed Skull Fracture</description>
    </choice>
    <choice>
      <code>2903011</code>
      <description>Paralysis</description>
    </choice>
    <choice>
      <code>2903013</code>
      <description>Pelvic Fracture(s)</description>
    </choice>
    <choice>
      <code>2903015</code>
      <description>Penetrating Injury to Head, Neck, Torso, and Extremities Proximal to Elbow and Knee</description>
    </choice>
    <choice>
      <code>2903017</code>
      <description>Respiratory Rate &lt;10 or &gt;29 OR (&lt;20 in infant &lt; one year)</description>
    </choice>
    <choice>
      <code>2903019</code>
      <description>Systolic Blood Pressure less than 90</description>
    </choice>
    <choice>
      <code>2903021</code>
      <description>Two or More Proximal Long-Bone Fractures</description>
    </choice>
  </enumerations>
	<notValues>
		<choice><code>7701003</code><description>Not Recorded</description>		</choice>
		<choice><code>7701001</code><description>Not Applicable</description>		</choice>
	</notValues>
  <correlationID>Yes</correlationID>
</restrictions>
</element>